@model IEnumerable<HOHSI.Models.Exercise>

@{
    ViewData["Title"] = "Exercises";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>@ViewData["Title"] (@Model.Count())</h1>
    <a asp-action="Create">Create New</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>@Html.DisplayNameFor(model => model.ImageName)</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td><img src="@item.ImageName" class="rounded" width="80" height="80" asp-append-version="true" /></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ExerciseId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ExerciseId">Details</a> |
                    <!--<a asp-action="Delete" asp-route-id="@item.ExerciseId">Delete</a>-->
                    <a class="confirmation badge badge-danger"
                       data-id="@item.ExerciseId"
                       data-controller="Exercises"
                       data-action="Delete"
                       data-body-message="Are you sure you want to delete '@item.Name' exercise?">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <th colspan="4" align="right">
                <div>Total @ViewData["Title"]: @Model.Count()</div>
            </th>
        </tr>
    </tbody>
</table>
