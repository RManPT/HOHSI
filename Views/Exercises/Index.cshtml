@model IEnumerable<HOHSI.Models.Exercise>

@{
    ViewData["Title"] = "Exercises";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>@ViewData["Title"] (@ViewBag.Count)</h1>
</div>
<form Index" method="get" id="search">
    <fieldset>
        <input type="text" id="searchString" name="SearchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" id="searchSubmit" value="Search" class="btn btn-primary" />
        <a class="btn btn-outline-primary small" asp-action="Index">Back to Full List</a>
    </fieldset>
</form>
<table class="table table-striped table-hover">
    <caption>Total @ViewData["Title"]: @ViewBag.Count</caption>
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th id="thmain">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DescSortParm"]">@Html.DisplayNameFor(model => model.Description)</a>
            </th>
            <th>@Html.DisplayNameFor(model => model.ImageName)</th>
            <th>
                <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="@item.ImageName" id="@item.ExerciseId" class="rounded" width="80" height="80" asp-append-version="true" />
                </td>
                <td id="tright">
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ExerciseId">Edit</a>
                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.ExerciseId">Details</a>
                    <!--<a asp-action="Delete" asp-route-id="@item.ExerciseId">Delete</a>-->
                    <a class="confirmation badge badge-danger"
                       data-id="@item.ExerciseId"
                       data-controller="Exercises"
                       data-action="DeleteConfirmed"
                       data-redirect-url="Exercises"
                       data-body-message="Are you sure you want to delete '@item.Name' exercise?">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


